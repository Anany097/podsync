{
    "version": "0.2.0",
    "configurations": [
        {
            // from https://github.com/vscode-debug-specs/go#debugging-executable-file
            "name": "Debug Podsync",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/podsync",
            "cwd": "${workspaceFolder}",
            "args": ["--config", "config.toml"]
        }
    ]
}